@using Pustok.MVC.ViewModels
@model MemberLoginViewModel

@{
	ViewData["Title"] = "Login";
}

<div class="site-wrapper" id="top">
	<section class="breadcrumb-section">
		<h2 class="sr-only">Site Breadcrumb</h2>
		<div class="container">
			<div class="breadcrumb-contents">
				<nav aria-label="breadcrumb">
					<ol class="breadcrumb">
						<li class="breadcrumb-item"><a href="index.html">Home</a></li>
						<li class="breadcrumb-item active">Login</li>
					</ol>
				</nav>
			</div>
		</div>
	</section>
	<!--=============================================
	=            Login Register page content         =
	=============================================-->
	<main class="page-section inner-page-sec-padding-bottom">
		<div class="container">
			<div class="row">
				<div class="col-sm-12 col-md-12 col-xs-12 col-lg-12 mb--30 mb-lg--0">
					<!-- Login Form s-->
					<form asp-action="login" asp-controller="account" method="post">
						<div class="login-form">
							<h4 class="login-title">New Customer</h4>
							<p><span class="font-weight-bold">I am a new customer</span></p>
							<div class="row">

								<div class="col-md-12 col-12 mb--15">
									<label asp-for="Username">Username</label>
									<input asp-for="Username" class="mb-0 form-control"
										   placeholder="Enter your Username">
									<span asp-validation-for="Username" class="text-danger"></span>
								</div>
								<div class="col-md-12 col-12 mb--15">
									<label asp-for="Password">Password</label>
									<input asp-for="Password" class="mb-0 form-control"
										   placeholder="Enter your Password">
									<span asp-validation-for="Password" class="text-danger"></span>
								</div>

								<div asp-validation-summary="ModelOnly" class="text-danger"></div>
								<div class="col-md-12">
									<button type="submit" class="btn btn-outlined">Login</button>
								</div>
							</div>
						</div>
					</form>
				</div>

			</div>
		</div>
	</main>
</div>



