@model List<Book>
@{
    int counter = 0;
}

<div class="container-fluid">
    <div class="row justify-content-between align-items-center">
        <h1>Books:</h1>
        <a class="btn btn-primary" asp-action="create" asp-controller="book">Create</a>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">No</th>
                <th scope="col">Name</th>
                <th scope="col">Description</th>
                <th scope="col">SalePrice</th>
                <th scope="col">CostPrice</th>
                <th scope="col">IsAvaiable</th>
                <th scope="col">Author Name</th>
                <th scope="col">PosterImage</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var book in Model)
            {
                counter++;
                <tr>
                    <th scope="row">@counter</th>
                    <td>@book.Name</td>
                    <td>@book.Description</td>
                    <td>@book.SalePrice</td>
                    <td>@book.CostPrice</td>
                    <td>@book.IsAvailable</td>
                    <td>@book.Author.FullName</td>
                    <td><img style="max-width:150px" src="~/uploads/Books/@book.BookImages.Where(x=>x.IsPoster == true).FirstOrDefault()?.ImageUrl" /></td>
                    <td>
                        <a asp-action="update" asp-controller="book" asp-route-id="@book.Id" class="btn btn-warning">Update</a>
                        <a asp-action="delete" asp-controller="book" asp-route-id="@book.Id" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>