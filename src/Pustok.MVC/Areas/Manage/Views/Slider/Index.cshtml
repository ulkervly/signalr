@model List<Slider>
@{
    int counter = 0;
}

@section csss{
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/limonte-sweetalert2/11.10.1/sweetalert2.min.css" integrity="sha512-l1vPIxNzx1pUOKdZEe4kEnWCBzFVVYX5QziGS7zRZE4Gi5ykXrfvUgnSBttDbs0kXe2L06m9+51eadS+Bg6a+A==" crossorigin="anonymous" referrerpolicy="no-referrer" />
}

<div class="container-fluid">
    <div class="row justify-content-between align-items-center">
        <h1>Sliders:</h1>
        <a class="btn btn-primary" asp-action="create" asp-controller="slider">Create</a>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">No</th>
                <th scope="col">Title</th>
                <th scope="col">Description</th>
                <th scope="col">Image</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var slider in Model)
            {
                counter++;
                <tr>
                    <th scope="row">@counter</th>
                    <td>@slider.Title</td>
                    <td>@slider.Description</td>
                    <td style="max-width:200px"><img src="~/uploads/Sliders/@slider.Image" style="max-width:30%; height:30%" /></td>
                    <td>
                        <a asp-action="update" asp-controller="slider" asp-route-id="@slider.Id" class="btn btn-warning">Update</a>
                        <a asp-action="delete" asp-controller="slider" asp-route-id="@slider.Id" class="btn btn-danger delete-btn">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts{
    <script src="~/assets/js/main.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/limonte-sweetalert2/11.10.1/sweetalert2.min.js" integrity="sha512-lhtxV2wFeGInLAF3yN3WN/2wobmk+HuoWjyr3xgft42IY0xv4YN7Ao8VnYOwEjJH1F7I+fadwFQkVcZ6ege6kA==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
}
